<script>
    function changecolor(el) {
        if ($(el).hasClass('far')) {
            $(el).removeClass('far');
            $(el).addClass('fas');
        }
        else {
            $(el).removeClass('fas');
            $(el).addClass('far');
        }
    }

    function addRemoveBookmark(el) {
        var data = { 'objectId': $(el).attr('obj-id'), 'identUserId': ($('#ident-user-id')).val() };
        if ($(el).hasClass('far')) {
            $.ajax({
                url: "/Auth/RemoveBookmark",
                data: data,
                type: "POST",
                /// dataType: 'JSON',
                contentType: 'application/x-www-form-urlencoded',
                success: function (response) {
                    $(el).removeClass('far');
                    $(el).addClass('fas');
                    //  $('#obj-container').html(response);
                },
                error: function () {
                    alert('Greška prilikom pribavljanja podataka.');
                }
            });
        }

        else {

            $.ajax({
                url: "/Auth/AddBookmark",
                data: data,
                type: "POST",
                /// dataType: 'JSON',
                contentType: 'application/x-www-form-urlencoded',
                success: function (response) {
                    $(el).removeClass('fas');
                    $(el).addClass('far');
                    //  $('#obj-container').html(response);
                },
                error: function () {
                    alert('Greška prilikom pribavljanja podataka.');
                }
            });
        }
    }
</script>



